{
  "name": "exegesis",
  "version": "0.0.1",
  "description": "Parses OpenAPI documents",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib/**/*",
    "types/**/*"
  ],
  "scripts": {
    "test": "npm run build && npm run test:lint && npm run test:unittest",
    "test:pre-commit": "npm run build && npm run test:lint && npm run test:unittest-pc",
    "build": "tsc",
    "clean": "rm -rf lib types coverage",
    "test:unittest": "tsc -p test && nyc mocha 'test/**/*.@(ts|js)'",
    "test:unittest-pc": "tsc -p test && mocha --reporter progress 'test/**/*.@(ts|js)'",
    "test:lint": "npm run test:lint:source && npm run test:lint:markdown && npm run test:lint:tests",
    "test:lint:source": "tslint -c tslint.json -t stylish 'src/**/*.ts'",
    "test:lint:tests": "tslint -c test/tslint.json -t stylish 'test/**/*.ts'",
    "test:lint:markdown": "markdownlint **/*.md *.md",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "precommit": "npm run test:pre-commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exegesis-js/exegesis.git"
  },
  "keywords": [
    "OpenAPI",
    "swagger",
    "OAS3"
  ],
  "author": "Jason Walton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exegesis-js/exegesis/issues"
  },
  "homepage": "https://github.com/exegesis-js/exegesis#readme",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/content-type": "^1.1.2",
    "@types/glob": "^5.0.35",
    "@types/json-schema": "^6.0.1",
    "@types/lodash": "^4.14.106",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.6",
    "@types/pump": "^1.0.1",
    "@types/qs": "^6.5.1",
    "@types/semver": "^5.5.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "markdownlint": "^0.8.1",
    "markdownlint-cli": "^0.8.1",
    "mocha": "^5.0.4",
    "nyc": "^11.7.1",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "ajv": "^6.4.0",
    "body-parser": "^1.18.2",
    "content-type": "^1.0.4",
    "events-listener": "^1.1.0",
    "glob": "^7.1.2",
    "json-schema-ref-parser": "^5.0.3",
    "json-schema-traverse": "^0.3.1",
    "lodash": "^4.17.5",
    "openapi3-ts": "^0.11.0",
    "promise-breaker": "^4.1.8",
    "pump": "^3.0.0",
    "qs": "^6.5.1",
    "raw-body": "^2.3.2",
    "semver": "^5.5.0"
  }
}
